{
    "name": "luminate/luminate",
    "description": "Laravel-inspired tooling for WordPress custom post types.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.2"
    },
    "autoload": {
        "psr-4": {
            "Luminate\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Luminate\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform-check": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "check": [
            "composer validate --strict",
            "@lint"
        ],
        "lint": "phpcs",
        "test": [
            "phpunit"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require-dev": {
        "phpunit/phpunit": "^12.4",
        "squizlabs/php_codesniffer": "^3.10",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "wp-coding-standards/wpcs": "^3.1"
    }
}
