{
    "name": "luminate/luminate",
    "description": "Laravel-inspired tooling for WordPress custom post types.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.2"
    },
    "autoload": {
        "psr-4": {
            "Luminate\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Luminate\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform-check": true
    },
    "scripts": {
        "check": [
            "composer validate --strict"
        ],
        "test": [
            "phpunit"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require-dev": {
        "phpunit/phpunit": "^12.4"
    }
}
